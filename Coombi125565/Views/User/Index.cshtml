@model Coombi125565.Models.UserIndexModel

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>
<table>
    <tr>
        <th>
            Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Users) {
    <tr>
        <td>
            @Html.ActionLink(Html.DisplayFor(modelItem => item.LastName)+" "+Html.DisplayFor(modelItem => item.FirstName), "Details", new {id=item.UserId })
        </td>
        <td>
            @if (Model.Followed.Contains(item.UserId)) {
                @Html.ActionLink("Unfollow", "Unfollow", new {id=item.UserId })
            } else {
                @Html.ActionLink("Follow", "Follow", new {id=item.UserId })
            }
        </td>
    </tr>
}

</table>
